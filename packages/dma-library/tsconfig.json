{
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "composite": true,
    "strict": true,
    "outDir": "lib/esm",
    "baseUrl": ".",
    "paths": {
      "@typechain/*": [
        "../dma-contracts/typechain/*"
      ],
      "@dma-library/*": [
        "./src/*"
      ],
      /* Aliases used internally by referenced packages */
      "@dma-common/constants": ["../dma-common/constants"],
      "@dma-common/utils/*": ["../dma-common/utils/*"],
      "@dma-common/types/*": ["../dma-common/types/*"],
      "@dma-common/test-utils": ["../dma-common/test-utils/index.ts"],
      "@dma-common/test-utils/*": ["../dma-common/test-utils/*"],
      "@dma-deployments/utils/*": ["../dma-deployments/utils/*"],
      "@dma-deployments/types/*": ["../dma-deployments/types/*"],
      "@dma-deployments/constants": ["../dma-deployments/constants/index.ts"]
    },
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // Generate d.ts files
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "./hardhat.config.ts",
    "./src/**/*"
  ],
  "exclude": ["node_modules", "../dma-deployments", "../dma-common"],
  "references": [
    { "path": "./tsconfig.cjs.json" }
  ]
}