{
  "extends": "@oasisdex/typescript-config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "paths": {
      "@deploy-configurations/configs": ["./src/configs/index.ts"],
      "@deploy-configurations/utils/*": ["./src/utils/*"],
      "@deploy-configurations/types/*": ["./src/types/*"],
      "@deploy-configurations/constants": ["./src/constants/index.ts"],
      "@deploy-configurations/operation-definitions": ["./src/operation-definitions/index.ts"]
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
