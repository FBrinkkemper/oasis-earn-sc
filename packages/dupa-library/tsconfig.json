{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@dupa-library/*": ["./src/*"],
      "@dupa-library": ["./src/index.ts"],
    },
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
}