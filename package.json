{
  "name": "oasis-mono",
  "license": "ISC",
  "engines": {
    "node": ">=16"
  },
  "private": "true",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "dev": "lerna run --scope dupa-contracts dev",
    "test": "lerna run test",
    "compile": "lerna run compile",
    "lint": "eslint . --ext .ts --max-warnings=0 && prettier --list-different 'packages/dupa-contracts/contracts/**/*.sol'",
    "lint:fix": "eslint . --fix --ext .ts",
    "format": "prettier --check \"./**/*.{ts,tsx,js,jsx}\"",
    "format:fix": "prettier --write \"./**/*.{ts,tsx,js,jsx}\" && prettier --write 'packages/dupa-contracts/contracts/**/*.sol'",
    "deploy:fallback": "yarn compile && npx hardhat deploy --usefallbackswap --network local --debug",
    "deploy:1inch": "yarn compile && npx hardhat deploy --network local --debug",
    "steth": "npx hardhat createPosition --network local",
    "steth:fallback": "npx hardhat createPosition --usefallbackswap --network local",
    "close": "npx hardhat closePosition --network local",
    "close:fallback": "npx hardhat closePosition --usefallbackswap --network local",
    "update-block": "node packages/dupa-contracts/tasks/update-block-number.ts",
    "dev": "cd packages/dupa-library/ && tsc -b && cd ../../ && yarn update-block && npx hardhat node --max-memory 8192 --fork $(grep MAINNET_URL ./.env | cut -d '=' -f2)"
  },
  "devDependencies": {
    "@eth-optimism/sdk": "^2.0.0",
    "@types/async-retry": "^1.4.3",
    "@types/chai": "^4.3.0",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/ramda": "^0.28.20",
    "async-retry": "^1.3.3",
    "axios": "^1.1.3",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^3.1.1",
    "ethers": "^5.7.2",
    "husky": "^8.0.2",
    "lerna": "^6.5.1",
    "ts-node": "^10.4.0",
    "ts-try": "^0.2.0",
    "typescript": "^4.7.3",
    "utility-types": "^3.10.0",
    "web3": "^1.3.5"
  },
  "dependencies": {
    "@ethereumjs/tx": "3.5.0",
    "@openzeppelin/contracts": "4.7.3",
    "@safe-global/safe-core-sdk": "^3.3.1",
    "@safe-global/safe-ethers-adapters": "^0.1.0-alpha.16",
    "@safe-global/safe-ethers-lib": "^1.9.1",
    "@safe-global/safe-service-client": "^1.5.1",
    "@types/prompts": "^2.4.2",
    "bignumber.js": "^9.0.1",
    "chalk": "^4.1.1",
    "config-json": "^1.0.0",
    "loadash": "^1.0.0",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "prompts": "^2.4.2",
    "ramda": "^0.28.0"
  },
  "resolutions": {
    "hardhat/**/@ethereumjs/tx": "3.5.0"
  }
}
