{
  "name": "oasis-mono",
  "license": "ISC",
  "engines": {
    "node": ">=16"
  },
  "private": "true",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "deploy": "npx hardhat run",
    "test": "npx hardhat packages/dupa-library/test",
    "test:gas": "REPORT_GAS=1 yarn packages/dupa-library/test",
    "test:1inch": "RUN_1INCH_TESTS=1 yarn packages/dupa-library/test",
    "test:1inch:gas": "RUN_1INCH_TESTS=1 yarn test:gas",
    "lint": "eslint . --ext .ts --max-warnings=0 && prettier --list-different 'packages/dupa-contracts/contracts/**/*.sol'",
    "lint:fix": "eslint . --fix --ext .ts",
    "format": "prettier --check \"./**/*.{ts,tsx,js,jsx}\"",
    "format:fix": "prettier --write \"./**/*.{ts,tsx,js,jsx}\"",
    "prettier:sol": "prettier --write 'packages/dupa-contracts/contracts/**/*.sol'",
    "compile": "npx hardhat compile",
    "start": "npx hardhat node --network hardhat",
    "deploy:fallback": "yarn compile && npx hardhat deploy --usefallbackswap --network local --debug",
    "deploy:1inch": "yarn compile && npx hardhat deploy --network local --debug",
    "steth": "npx hardhat createPosition --network local",
    "steth:fallback": "npx hardhat createPosition --usefallbackswap --network local",
    "close": "npx hardhat closePosition --network local",
    "close:fallback": "npx hardhat closePosition --usefallbackswap --network local",
    "update-block": "node update-block-number.ts",
    "dev": "cd packages/dupa-library/ && tsc -b && cd ../../ && yarn update-block && npx hardhat node --max-memory 8192 --fork $(grep MAINNET_URL ./.env | cut -d '=' -f2)"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.3.4",
    "@google-cloud/local-auth": "2.1.1",
    "@tenderly/hardhat-tenderly": "^1.0.13",
    "@types/async-retry": "^1.4.3",
    "@types/chai": "^4.3.0",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/ramda": "^0.28.20",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "async-retry": "^1.3.3",
    "axios": "^1.1.3",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^3.1.1",
    "googleapis": "107",
    "husky": "^8.0.2",
    "lerna": "^6.5.1",
    "mocha": "^10.1.0",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "solhint": "^3.2.2",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.13",
    "solidity-docgen": "^0.6.0-beta.29",
    "ts-node": "^10.4.0",
    "ts-try": "^0.2.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.7.3",
    "utility-types": "^3.10.0",
    "web3": "^1.3.5"
  },
  "dependencies": {
    "@ethereumjs/tx": "3.5.0",
    "@openzeppelin/contracts": "4.7.3",
    "bignumber.js": "^9.0.1",
    "chalk": "^4.1.1",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "ramda": "^0.28.0",
    "typechain": "^8.1.0"
  },
  "resolutions": {
    "hardhat/**/@ethereumjs/tx": "3.5.0"
  }
}
